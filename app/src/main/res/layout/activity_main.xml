<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewmodel"
            type="com.otitan.ui.viewmodel.MainViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mainLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="@string/site_name"
                android:visibility="gone" />

            <TextView
                android:id="@+id/site"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{()->viewmodel.getSiteList()}"
                android:padding="10dp"
                android:text="@{viewmodel.site}"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="空气质量指数"
            android:textColor="@color/white"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/wrzs"
                android:textColor="@color/white" />

            <com.otitan.customview.CustomCircleProgressBar
                android:id="@+id/circleProgress"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:inside_color="@color/linecolor"
                app:max_progress="500"
                app:outside_color="@color/color_zj_1"
                app:outside_radius="55dp"
                app:progress_text_color="@color/white"
                app:progress_text_size="20sp"
                app:progress_width="7dp"
                app:title="优"
                app:titleSize="12sp" />

            <LinearLayout
                android:id="@+id/pm10"
                style="@style/kqzl_linear"
                android:layout_marginTop="20dp">

                <TextView
                    style="@style/kqzl_item_name"
                    android:text="@string/pm10" />

                <TextView
                    style="@style/kqzl_item_value"
                    android:text="@{String.valueOf(viewmodel.evn.pm10)}" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/no2"
                style="@style/kqzl_linear"
                android:layout_below="@+id/pm10">

                <TextView
                    style="@style/kqzl_item_name"
                    android:text="@string/no2" />

                <TextView
                    style="@style/kqzl_item_value"
                    android:text="@{String.valueOf(viewmodel.evn.no2)}" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/so2"
                style="@style/kqzl_linear"
                android:layout_below="@+id/no2">

                <TextView
                    style="@style/kqzl_item_name"
                    android:text="@string/so2" />

                <TextView
                    style="@style/kqzl_item_value"
                    android:text="@{String.valueOf(viewmodel.evn.so2)}" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/o3"
                style="@style/kqzl_linear"
                android:layout_below="@+id/so2">

                <TextView
                    style="@style/kqzl_item_name"
                    android:text="@string/o3" />

                <TextView
                    style="@style/kqzl_item_value"
                    android:text="@{String.valueOf(viewmodel.evn.o3)}" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/co"
                style="@style/kqzl_linear"
                android:layout_below="@+id/o3">

                <TextView
                    style="@style/kqzl_item_name"
                    android:text="@string/co" />

                <TextView
                    style="@style/kqzl_item_value"
                    android:text="@{String.valueOf(viewmodel.evn.co)}" />
            </LinearLayout>
        </RelativeLayout>

        <com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tr_head_height="40dp"
            app:tr_max_head_height="80dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/monitorList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never" />
        </com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>
    </LinearLayout>

</layout>